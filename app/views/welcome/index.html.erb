<p id="notice"><%= notice %></p>

<h1>Welcome to Wynshop!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.formatted_price %></td>
        <td><%= product.image %></td>
        <td><%= link_to 'Show', product %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'See Our Products', products_path %>
