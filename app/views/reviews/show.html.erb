  </p>



  <%= link_to 'Edit', edit_review_path(@review) %> |

  <% if @review.product.nil? %>
    <%= link_to 'Back', reviews_path %>

  <% else %>
    <%= link_to 'Back', @review.product %>
  <% end %>



</article>

