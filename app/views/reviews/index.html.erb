<body>

<header><h2>&lt;Wynshop Admin Reviews Page&gt;</h2></header>

<article class='article_admin'>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <table>
    <thead>
      <tr>
        <th>Comment</th>
        <th>Product</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.comment %></td>
          <td><%= review.product.name %></td>
          <td class="mini_button_blue"><%= link_to 'See Your Review', review %></td>
          <td class="mini_button_blue"><%= link_to 'Edit Review', edit_review_path(review) %></td>
          <td class="mini_button_blue"><%= link_to 'Delete Review', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>



</article>

<footer>
  <div class="footer_menu">
  <h3>&lt;Wynshop Products&gt;</h3>
  <p>All Rights reserved to: Team 6</p>
</div>
</footer>
</body>
