<nav class="top-navigation">
   <ul class="links">
     <li>Signed in as Admin</li>
     <li class="button_black"><%= link_to 'Reviews Page', reviews_path %></li>
     <li class="button_black"><%= link_to 'Products Page', products_path %></li>
     <li class="button_black"><%= link_to 'Home Page', root_path %></li>
   </ul>
   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>
</nav>


<body>

<header><h2>&lt;Wynshop Admin Reviews Page&gt;</h2></header>

<article class='article_admin'>

  <p id="notice"><%= notice %></p>


  <table>
    <thead>
      <tr>
        <th>Comment</th>
        <th>Product</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.comment %></td>
          <td><%= review.product.name %></td>
          <td><%= link_to 'See Your Review', review %></td>
          <td><%= link_to 'Edit Review', edit_review_path(review) %></td>
          <td><%= link_to 'Delete Review', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>



</article>

<footer>
  <div class="footer_menu">
  <h3>&lt;Wynshop Products&gt;</h3>
  <p>All Rights reserved to: Team 6</p>
</div>
</footer>
</body>
