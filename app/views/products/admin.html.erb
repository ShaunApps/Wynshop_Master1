<p id="notice"><%= notice %></p>

<h1>Welcome Wynshop Admin</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.formatted_price %></td>
        <td><%= product.image %></td>
        <td><%= link_to 'See Details', product %></td>
        <td><%= link_to 'Edit Product', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Create a New Product', new_product_path %>
<br>
<%= link_to 'Go to Products Page', products_path %>
