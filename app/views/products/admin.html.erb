<nav class="top-navigation">
   <ul class="links">
     <li class="button_black"><%= link_to 'Contact Us', contact_path %></li>
     <li class="button_black"><%= link_to 'Reviews Page', reviews_path %></li>
     <li class="button_black"><%= link_to 'Products Page', products_path %></li>
     <li class="button_black"><%= link_to 'Home Page', root_path %></li>
     <li class="sign_in_notice">Signed in as <br><%=current_user.email%></li>
   </ul>
</nav>


<body>

<header>
  <div class="notice_box">
    <p class="notice_style"><%= notice %></p>
    <p class="notice_style"><%= alert %></p>
  </div>
  <h2>&lt;Welcome Wynshop Admin&gt;</h2>
  <div class="create_button"><%= link_to 'Create a New Product', new_product_path %></div>

</header>

<article class='article_admin'>
  <p id="notice"><%= notice %></p>
  <br>
  <table class="table_class">
      <tr class="add_line">
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td class="product_name_admin"><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.formatted_price %></td>
          <td class="mini_button_blue"><%= link_to 'Details', product %></td>
          <td class="mini_button_blue"><%= link_to 'Edit', edit_product_path(product) %></td>
          <td class="mini_button_blue"><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</article>

<footer>
  <div class="footer_menu">
  <h3>&lt;Wynshop Products&gt;</h3>
  <p>All Rights reserved to: Team 6</p>
</div>
</footer>
</body>
