    <p class="alert"><%= alert %></p>
</nav>

<body>

<header><h2>Details for: <%= @product.name %></h2></header>

<article>
<div class="show_container">
  <p id="notice"><%= notice %></p>

  <h1>
    <%= @product.name %>
  </h1>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.formatted_price %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= @product.image %>
  </p>

  <h3>Reviews</h3>
  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      Added on: <%= review.created_at %>
    </p>
  <% end %>

    <h3>Add a Review</h3>
  <%= render 'reviews/form' %>
  <li class="button_black"><%= link_to 'Go Back to Products', products_path %></li>
</div>
</article>

<footer>
  <div class="footer_menu">
  <h3>&lt;Wynshop Products&gt;</h3>
  <p>All Rights reserved to: Team 6</p>
</div>
</footer>
</body>
