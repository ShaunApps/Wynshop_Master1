<p id="notice"><%= notice %></p>

<h1>
  <%= @product.name %>
</h1>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.formatted_price %>
</p>

<p>
  <strong>Image:</strong>
  <%= @product.image %>
</p>

<h3>Reviews</h3>
<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    Added on: <%= review.created_at %>
  </p>
<% end %>

  <h3>Add a Review</h3>
<%= render 'reviews/form' %>


